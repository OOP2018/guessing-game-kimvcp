<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<FlowPane prefHeight="228.0" prefWidth="434.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.GameController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="58.0" prefWidth="435.0" text="Guessing Game" textFill="#191818">
         <font>
            <Font size="36.0" />
         </font>
         <FlowPane.margin>
            <Insets bottom="20.0" />
         </FlowPane.margin></Label>
      <Label alignment="CENTER" prefHeight="46.0" prefWidth="212.0" text="Guess the secret number">
         <font>
            <Font size="18.0" />
         </font>
         <FlowPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </FlowPane.margin>
      </Label>
      <TextField fx:id="textfield1" onAction="#handleGuess" prefHeight="42.0" prefWidth="154.0">
         <FlowPane.margin>
            <Insets bottom="20.0" />
         </FlowPane.margin>
      </TextField>
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleGuess" prefHeight="47.0" prefWidth="114.0" text="GO">
         <FlowPane.margin>
            <Insets left="40.0" right="30.0" />
         </FlowPane.margin>
      </Button>
      <Label fx:id="label" text="Hint" />
   </children>
</FlowPane>
